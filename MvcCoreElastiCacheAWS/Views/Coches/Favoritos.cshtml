@model List<Coche>

<h1>Coches Favoritos AWS ElastiCache</h1>

@if (Model != null)
{
    @foreach (Coche car in Model)
    {
        <div class="card col-3">
            <img class="card-img-top" src="@car.Imagen" />
            <div class="card-body">
                <h5 class="card-title">@car.Marca @car.Modelo</h5>
                <a asp-controller="Coches"
                   asp-action="DeleteFavorito"
                   asp-route-idcoche="@car.IdCoche"
                   class="btn btn-danger btn-sm">
                    Eliminar favorito
                </a>
            </div>
        </div>
    }

}
else
{
    <h2 class="text-danger">No hay favoritos</h2>
}